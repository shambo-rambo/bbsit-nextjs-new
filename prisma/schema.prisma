generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}

model Family {
  id                  String              @id @default(cuid())
  image               String?
  name                String
  homeAddress         String
  points              Int                 @default(0)
  createdAt           DateTime            @default(now())
  updatedAt           DateTime            @updatedAt
  currentAdminId      String?
  adminId             String?
  children            Child[]
  createdEvents       Event[]             @relation("CreatedEvents")
  participatingEvents Event[]             @relation("ParticipatingEvents")
  groupPoints         FamilyGroupPoints[]
  adminOfGroups       Group[]             @relation("GroupAdmin")
  invitations         Invitation[]
  members             User[]
  groups              Group[]             @relation("GroupMembers")
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  type      String
  content   String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  linkedId  String?
  user      User     @relation(fields: [userId], references: [id])
}

model User {
  id            String         @id @default(cuid())
  name          String?
  email         String         @unique
  emailVerified DateTime?
  password      String?
  image         String?
  familyId      String?
  isAdmin       Boolean        @default(false)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  notifications Notification[]
  family        Family?        @relation(fields: [familyId], references: [id])

  @@index([email])
}

model Child {
  id        String   @id @default(cuid())
  name      String
  familyId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  family    Family   @relation(fields: [familyId], references: [id])
}

model Invitation {
  id              String   @id @default(cuid())
  inviterFamilyId String
  inviteeEmail    String
  groupId         String?
  status          String
  expirationDate  DateTime
  createdAt       DateTime @default(now())
  group           Group?   @relation(fields: [groupId], references: [id])
  inviterFamily   Family   @relation(fields: [inviterFamilyId], references: [id])

  @@index([inviteeEmail])
}

model Group {
  id           String              @id @default(cuid())
  name         String
  description  String?
  adminId      String
  inviteCode   String              @unique
  createdAt    DateTime            @default(now())
  updatedAt    DateTime            @updatedAt
  events       Event[]
  familyPoints FamilyGroupPoints[]
  admin        Family              @relation("GroupAdmin", fields: [adminId], references: [id])
  invitations  Invitation[]
  members      Family[]            @relation("GroupMembers")
}

model Event {
  id               String      @id @default(cuid())
  name             String
  description      String?
  startTime        DateTime
  endTime          DateTime
  points           Int
  familyId         String
  groupId          String
  status           EventStatus
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt
  creatorFamilyId  String
  rejectedFamilies String[]    @default([])
  acceptedByName   String?
  creatorFamily    Family      @relation("CreatedEvents", fields: [creatorFamilyId], references: [id])
  family           Family      @relation("ParticipatingEvents", fields: [familyId], references: [id])
  group            Group       @relation(fields: [groupId], references: [id])
}

model FamilyGroupPoints {
  id        String   @id @default(cuid())
  familyId  String
  groupId   String
  points    Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  family    Family   @relation(fields: [familyId], references: [id])
  group     Group    @relation(fields: [groupId], references: [id])

  @@unique([familyId, groupId])
}

enum EventStatus {
  PENDING
  ACCEPTED
  COMPLETED
  CANCELLED
  PAST
}
